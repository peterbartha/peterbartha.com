{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    // tell when import type should be used
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
